<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@drawable/shape_item_note"
    android:orientation="vertical">

    <View
        android:id="@+id/view_item_note_rv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_margin="16dp"
        android:background="@drawable/shape_circle_lilac_color_corner_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_item_note_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_item_note_rv"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_item_note_rv"
        app:layout_constraintStart_toEndOf="@+id/view_item_note_rv"
        app:layout_constraintTop_toTopOf="@+id/view_item_note_rv" />

    <TextView
        android:id="@+id/tv_date_item_note_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content_item_note_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_date_item_note_rv"
        app:layout_constraintStart_toEndOf="@+id/view_item_note_rv"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item_note_rv" />
</androidx.constraintlayout.widget.ConstraintLayout>
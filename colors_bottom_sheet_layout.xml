<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <View
        android:id="@+id/view_color_lilac"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/shape_oval_color_lilac"
        app:layout_constraintEnd_toStartOf="@+id/view_color_green"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_color_green"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/shape_oval_color_green"
        app:layout_constraintEnd_toStartOf="@+id/view_color_red"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_color_lilac"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_color_red"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/shape_oval_color_red"
        app:layout_constraintEnd_toStartOf="@+id/view_color_orange"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_color_green"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_color_orange"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/shape_oval_color_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_color_red"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_color_purple"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_oval_color_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="197dp" />

    <View
        android:id="@+id/view_color_cyan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_oval_color_cyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="199dp" />

    <View
        android:id="@+id/view_color_pink"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_oval_color_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="200dp" />

    <View
        android:id="@+id/view_color_yellow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_oval_color_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="196dp" />

</androidx.constraintlayout.widget.ConstraintLayout>